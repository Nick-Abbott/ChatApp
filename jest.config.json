{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/src/.*(test|spec))\\.(js|ts)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.[tj]s"
  ],
  "coveragePathIgnorePatterns": [
    ".test.[tj]s",
    "src/client"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "html",
    "json"
  ]
}